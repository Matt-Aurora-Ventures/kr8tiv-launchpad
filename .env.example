# ============================================
# KR8TIV Launchpad Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# === DATABASE ===
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=kr8tiv_launchpad
POSTGRES_PORT=5432

# === REDIS ===
REDIS_PORT=6379

# === API ===
NODE_ENV=production
API_PORT=3001

# === SOLANA ===
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# === PLATFORM KEYS (SENSITIVE - KEEP SECRET) ===
PLATFORM_TREASURY=your_treasury_address
PLATFORM_PRIVATE_KEY=your_private_key_base58
BAGS_API_KEY=your_bags_api_key
ADMIN_API_KEY=your_admin_api_key

# === TOKEN CONFIG ===
KR8TIV_TOKEN_MINT=your_token_mint_address
STAKING_PROGRAM_ID=your_staking_program_id
NEXT_PUBLIC_KR8TIV_TOKEN_MINT=your_token_mint_address
NEXT_PUBLIC_STAKING_PROGRAM_ID=your_staking_program_id

# === WEB ===
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# === MONITORING ===
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# === SCHEDULER ===
ENABLE_SCHEDULER=false
