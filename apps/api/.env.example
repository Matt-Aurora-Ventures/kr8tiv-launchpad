# =============================================================================
# KR8TIV Launchpad API Configuration
# =============================================================================
# Copy this to .env and fill in your values
# 
# SECURITY NOTES:
# - NEVER commit the .env file to version control
# - Use strong random values for all secrets
# - Rotate secrets regularly in production
# - Use different secrets for dev/staging/production
# =============================================================================

# =============================================================================
# Database
# =============================================================================
# PostgreSQL connection string
# SECURITY: Use strong password, SSL in production
DATABASE_URL="postgresql://user:password@localhost:5432/kr8tiv_launchpad?sslmode=require"

# =============================================================================
# Solana Configuration
# =============================================================================
# RPC endpoint - Helius or other reliable provider recommended
# SECURITY: Keep API keys confidential, use rate-limited endpoints
SOLANA_RPC_URL="https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY"

# =============================================================================
# Bags.fm API
# =============================================================================
# API key from Bags.fm developer portal
# SECURITY: This key has access to create tokens - protect it carefully
BAGS_API_KEY="your_bags_api_key_here"

# =============================================================================
# Platform Wallets
# =============================================================================
# Platform treasury for collecting fees (PublicKey)
# This is a PUBLIC address - safe to share
PLATFORM_TREASURY="YourTreasuryPublicKeyHere"

# Platform private key for signing transactions
# SECURITY: CRITICAL - This controls the platform treasury!
# - Generate with: solana-keygen new
# - Store securely (HSM recommended for production)
# - Use format: base58 string OR JSON array [1,2,3,...]
PLATFORM_PRIVATE_KEY="GENERATE_WITH_openssl_rand_OR_solana_keygen"

# Burn agent private key (for buy-and-burn operations)
# SECURITY: Separate key from treasury - limits blast radius
BURN_AGENT_PRIVATE_KEY="GENERATE_SEPARATE_KEY_FOR_BURN_AGENT"

# LP agent private key (for adding liquidity)
# SECURITY: Separate key from treasury - limits blast radius
LP_AGENT_PRIVATE_KEY="GENERATE_SEPARATE_KEY_FOR_LP_AGENT"

# =============================================================================
# $KR8TIV Token
# =============================================================================
# Token mint address for the platform token
KR8TIV_TOKEN_MINT="YourKR8TIVTokenMintAddressHere"

# =============================================================================
# Staking Program
# =============================================================================
# Program ID for the staking contract
STAKING_PROGRAM_ID="YourStakingProgramIDHere"

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# Security Configuration
# =============================================================================
# Admin API key for protected endpoints
# SECURITY: Generate with: openssl rand -hex 32
# Minimum 32 characters, use random generation
ADMIN_API_KEY="GENERATE_WITH_openssl_rand_hex_32"

# Webhook signing secret (for external webhooks)
# SECURITY: Generate with: openssl rand -hex 32
WEBHOOK_SECRET="GENERATE_WITH_openssl_rand_hex_32"

# Encryption key for sensitive data at rest
# SECURITY: Generate with: openssl rand -hex 32 (produces 64 hex chars = 32 bytes)
ENCRYPTION_KEY="GENERATE_64_HEX_CHARS_WITH_openssl_rand_hex_32"

# =============================================================================
# Rate Limiting
# =============================================================================
# Requests per window (15 min) for general API
RATE_LIMIT_MAX=100

# Requests per window (1 hour) for launch endpoint
LAUNCH_RATE_LIMIT_MAX=10

# =============================================================================
# Job Scheduler
# =============================================================================
# Enable job scheduler (automation for fee claiming, burns, etc.)
# Set to true in production with proper monitoring
ENABLE_SCHEDULER=false

# =============================================================================
# CORS Configuration (comma-separated origins)
# =============================================================================
# SECURITY: Be specific about allowed origins in production
CORS_ORIGINS="http://localhost:3000,https://kr8tiv.io,https://app.kr8tiv.io"

# =============================================================================
# Logging
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable audit logging (recommended for production)
ENABLE_AUDIT_LOG=true
